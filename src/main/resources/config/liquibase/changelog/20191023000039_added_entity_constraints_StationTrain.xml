<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.6.xsd">
    <!--
        Added the constraints for entity StationTrain.
    -->
    <changeSet id="20191023000039-2" author="jhipster">
        
        <addForeignKeyConstraint baseColumnNames="station_id"
                                 baseTableName="station_train"
                                 constraintName="fk_station_train_station_id"
                                 referencedColumnNames="id"
                                 referencedTableName="station"/>

        <addForeignKeyConstraint baseColumnNames="train_id"
                                 baseTableName="station_train"
                                 constraintName="fk_station_train_train_id"
                                 referencedColumnNames="id"
                                 referencedTableName="train"/>

    </changeSet>
</databaseChangeLog>
