<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.6.xsd">
    <!--
        Added the constraints for entity Ticket.
    -->
    <changeSet id="20191023000040-2" author="jhipster">
        
        <addForeignKeyConstraint baseColumnNames="passenger_id"
                                 baseTableName="ticket"
                                 constraintName="fk_ticket_passenger_id"
                                 referencedColumnNames="id"
                                 referencedTableName="passenger"/>

        <addForeignKeyConstraint baseColumnNames="train_id"
                                 baseTableName="ticket"
                                 constraintName="fk_ticket_train_id"
                                 referencedColumnNames="id"
                                 referencedTableName="train"/>

    </changeSet>
</databaseChangeLog>
